{
  "manifest_version": 3,
  "name": "PR Code Review Assistant",
  "version": "1.0.0",
  "description": "AI-powered code review assistant for Pull Requests",
  "permissions": ["activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": ""
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["contentScript.js"],
      "css": ["style.css"]
    }
  ]
}
